<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Game Type:"
        android:id="@+id/gameTypeTextView"
        android:layout_marginTop="53dp"
        android:textSize="25dp"
        android:gravity="left"
        android:layout_alignParentTop="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/gameTypeSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Number of Players:"
        android:id="@+id/numPlayersTextView"
        android:textSize="25dp"
        android:gravity="left"
        android:layout_above="@+id/numPlayersSpinner"
        android:layout_alignLeft="@+id/gameTypeTextView"
        android:layout_alignStart="@+id/gameTypeTextView" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/numPlayersSpinner"
        android:spinnerMode="dropdown"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/defaultOptionNextBtn"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/gameTypeTextView"
        android:onClick="defaultOptionNextOnClick"/>


</RelativeLayout>