<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player: "
        android:textSize="25dp"
        android:id="@+id/playerTextView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:capitalize="words"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"
        android:text="player name"
        android:id="@+id/playerNameTextView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:capitalize="words"
        android:layout_marginLeft="31dp"
        android:layout_below="@+id/playerTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Role: "
        android:textSize="25dp"
        android:id="@+id/roleTextView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:capitalize="words"
        android:layout_below="@+id/playerNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="player role"
        android:textSize="25dp"
        android:id="@+id/playerRoleTextView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:capitalize="words"
        android:visibility="invisible"
        android:layout_below="@+id/roleTextView"
        android:layout_alignLeft="@+id/playerNameTextView"
        android:layout_alignStart="@+id/playerNameTextView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"
        android:text="Additional Details"
        android:id="@+id/detailsTextView"
        android:layout_below="@+id/playerRoleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:visibility="invisible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ACCEPT MISSION"
        android:id="@+id/acceptBtn"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="REJECT MISSION"
        android:id="@+id/rejectBtn"
        android:layout_above="@+id/acceptBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
</RelativeLayout>