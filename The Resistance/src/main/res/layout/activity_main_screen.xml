<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keonasoft.resistance.MainScreen"
    tools:ignore="MergeRootFrame"
    android:clickable="true">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGameBtn"
        android:onClick="newGameOnClick"
        android:layout_above="@+id/customGameBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Custom Game"
        android:id="@+id/customGameBtn"
        android:onClick="newGameOnClick"
        android:layout_above="@+id/loadGameBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Game"
        android:id="@+id/loadGameBtn"
        android:onClick="loadGameOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp" />
</RelativeLayout>
